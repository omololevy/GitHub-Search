generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  login         String   @unique
  name          String?
  location      String?
  country       String?
  public_repos  Int
  followers     Int
  avatar_url    String
  totalStars    Int
  contributions Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  repos         Repo[]
}

model Repo {
  id              Int    @id @default(autoincrement())
  userId          Int
  stargazers_count Int
  name            String
  user            User   @relation(fields: [userId], references: [id])

  @@index([userId])
}